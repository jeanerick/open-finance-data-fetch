extends layout

block content
  form(action='/', method='POST' )    
    textarea(rows=10 name='target' width= '550px' height='80px' placeholder='Endpoints separados por virgula')
      | /products-services/v1/personal-unarranged-account-overdraft,
      | /products-services/v1/business-accounts
    input(type='submit' name='submit' value='Atualizar')
  |
  each dado in taskList
    h3 #{dado.endpoint}
    if dado.data
      table(width='100%', cellspacing='0', cellpadding='0', border='0', bgcolor='#F2F2F2')
            thead
                tr
                  th Name
                  th Endpoint
                  th Data              
            tbody
              each task in dado.data
                  tr
                    td #{task.OrganisationName}
                    td #{task.endpoint}
                    td !{JSON.stringify(task.responseData)}
                
