extends layout

block content
  form(action='/refresh', method='POST')
    input(type='text' name='target' placeholder='Endpoint')
    input(type='submit' name='submit' value='Atualizar')
  |
  table(width='100%', cellspacing='0', cellpadding='0', border='0', bgcolor='#F2F2F2')
        thead
            tr
              th Name
              th Endpoint
              th Data              
        tbody
          each task in taskList
              tr
                td #{task.OrganisationName}
                td #{task.endpoint}
                td !{JSON.stringify(task.responseData)}
                
